// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./hhdb.db"
}

model Product {
  id      Int      @id @default(autoincrement())
  title   String
  description String
  imagepath String
  price Int
  
}

model User {
  id        Int      @id @default(autoincrement())
  fName     String
  lName     String
  username  String
  seller    String
  admin     String
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  rating    Int
  rvwText   String
}